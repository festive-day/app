<?xml version="1.0"?>
<ruleset name="Cookie Consent Manager">
    <description>WordPress Coding Standards for Cookie Consent Manager Plugin</description>

    <!-- What to scan -->
    <file>.</file>

    <!-- Exclude directories -->
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/tests/*</exclude-pattern>
    <exclude-pattern>*.min.js</exclude-pattern>
    <exclude-pattern>*.min.css</exclude-pattern>

    <!-- How to scan -->
    <arg value="sp"/> <!-- Show sniff and progress -->
    <arg name="basepath" value="./"/>
    <arg name="colors"/>
    <arg name="extensions" value="php"/>
    <arg name="parallel" value="8"/>

    <!-- Rules: Check WordPress Coding Standards -->
    <!-- Note: Install WordPress Coding Standards via Composer or globally -->
    <!-- composer global require wp-coding-standards/wpcs -->
    <!-- Then run: phpcs --config-set installed_paths ~/.composer/vendor/wp-coding-standards/wpcs -->
    <rule ref="WordPress">
        <!-- Allow short array syntax -->
        <exclude name="Generic.Arrays.DisallowShortArraySyntax"/>
        <!-- Allow short ternary -->
        <exclude name="WordPress.PHP.DisallowShortTernary"/>
    </rule>

    <!-- Minimum PHP version -->
    <config name="testVersion" value="8.0-"/>
</ruleset>

