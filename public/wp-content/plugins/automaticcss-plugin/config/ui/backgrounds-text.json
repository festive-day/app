      "id": "contextual-color-relationships-light",
      "title": "Light Relationships",
      "type": "accordion-container",
      "tooltip": "",
      "description": "",
      "displayWhen": [
        "option-relate-bg-text",
        "on"
      ],
      "content": [
        {
          "id": "light-relationships-tabs",
          "title": "Dark Relationships Tabs",
          "type": "tabs-container",
          "style": "full-width",
          "content": [
            {
              "id": "ultra-light-relationships-settings",
              "title": "Ultra Light",
              "type": "tab",
              "content": [
                {
                  "id": "ultra-light-relationships-intro",
                  "type": "message",
                  "text": "When using '.bg--ultra-light,' ACSS will automatically change foreground elements to the colors below."
                },
                {
                  "id": "bg-ultra-light-text",
                  "title": "Text Color",
                  "type": "text",
                  "default": "var(--text-dark)",
                  "skip-if-empty": true
                },
                {
                  "id": "bg-ultra-light-heading",
                  "title": "Heading Color",
                  "type": "text",
                  "default": "var(--text-dark)",
                  "skip-if-empty": true,
                  "cssVariable": "color",
                  "target": ":is(.bg--ultra-light, [class*=surface-]) :is(h1, h2, h3, h4, h5, h6)"
                },
                {
                  "id": "bg-ultra-light-link-hover-container",
                  "type": "hover-container",
                  "content": [
                    {
                      "id": "bg-ultra-light-link",
                      "title": "Link Color",
                      "type": "text",
                      "default": "",
                      "skip-if-empty": true,
                      "cssVariable": "color",
                      "target": ":is(.bg--ultra-light, [class*=surface-]) :is(a):not([class*='btn--'])"
                    },
                    {
                      "id": "bg-ultra-light-link-hover",
                      "title": "Link Color (Hover)",
                      "type": "text",
                      "default": "",
                      "skip-if-empty": true,
                      "cssVariable": "color",
                      "target": ":is(.bg--ultra-light, [class*=surface-]) :is(a):not([class*='btn--']):hover"
                    }
                  ]
                },
                {
                  "id": "bg-ultra-light-button",
                  "title": "Button Style",
                  "type": "text",
                  "default": "primary",
                  "skip-if-empty": true,
                  "tooltip": "Expects the name of a button style (primary, secondary, etc.). You can attach '.btn--outline' to style name for outline variations",
                  "output": "quotes"
                },
                {
                  "id": "bg-ultra-light-focus-color",
                  "title": "Focus Color",
                  "type": "text",
                  "default": "",
                  "skip-if-empty": true
                }
              ]
            },
