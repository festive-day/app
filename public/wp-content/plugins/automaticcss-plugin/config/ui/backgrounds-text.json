    {
      "id": "contextual-background-assignments",
      "title": "Backgrounds",
      "type": "accordion-container",
      "tooltip": "",
      "description": "",
      "content": [
        {
          "id": "backgrounds-message",
          "type": "message",
          "text": "Set the main background styles for your website."
        },
        {
          "id": "body-bg-color",
          "title": "Website (Body)",
          "type": "text",
          "default": "var(--white)",
          "skip-if-empty": true,
          "tooltip": "Set the default light and dark background colors for your website."
        },
        {
          "id": "bg-dark",
          "title": "Dark",
          "type": "text",
          "default": "var(--neutral-dark)",
          "skip-if-empty": true,
          "tooltip": "The default color of '.bg--dark' backgrounds.",
          "documentation": "https://automaticcss.com/docs/background-text-assignments/"
        },
        {
          "id": "bg-ultra-dark",
          "title": "Ultra Dark",
          "type": "text",
          "default": "var(--neutral-ultra-dark)",
          "skip-if-empty": true,
          "tooltip": "The default color of '.bg--ultra-dark' backgrounds.",
          "documentation": "https://automaticcss.com/docs/background-text-assignments/"
        },
        {
          "id": "bg-light",
          "title": "Light",
          "type": "text",
          "default": "var(--neutral-light)",
          "skip-if-empty": true,
          "tooltip": "The default color of '.bg--light' backgrounds.",
          "documentation": "https://automaticcss.com/docs/background-text-assignments/"
        },
        {
          "id": "bg-ultra-light",
          "title": "Ultra Light",
          "type": "text",
          "default": "var(--neutral-ultra-light)",
          "skip-if-empty": true,
          "tooltip": "The default color of '.bg--ultra-light' backgrounds.",
          "documentation": "https://automaticcss.com/docs/background-text-assignments/"
        }
      ]
    },
    {
      "id": "contextual-text-assignments",
      "title": "Text",
      "type": "accordion-container",
      "tooltip": "",
      "description": "",
      "content": [
        {
          "id": "text-assignments-message",
          "type": "message",
          "text": "Set the default light and dark text styles for your website."
        },
        {
          "id": "body-color-clone",
          "type": "clone",
          "target": "body-color"
        },
        {
          "id": "text-dark",
          "title": "Dark",
          "type": "text",
          "default": "var(--black)",
          "skip-if-empty": true,
          "tooltip": "The default color of '.text--dark' text.",
          "documentation": "https://automaticcss.com/docs/background-text-assignments/"
        },
        {
          "id": "text-dark-muted",
          "title": "Dark Muted",
          "type": "text",
          "default": "color-mix(in srgb, var(--text-dark) 80%, transparent)",
          "skip-if-empty": true,
          "tooltip": "The default color of '.text--dark-muted' text.",
          "documentation": "https://automaticcss.com/docs/background-text-assignments/"
        },
        {
          "id": "text-light",
          "title": "Light",
          "type": "text",
          "default": "var(--white)",
          "skip-if-empty": true,
          "tooltip": "The default color of '.text--light' text.",
          "documentation": "https://automaticcss.com/docs/background-text-assignments/"
        },
        {
          "id": "text-light-muted",
          "title": "Light Muted",
          "type": "text",
          "default": "color-mix(in srgb, var(--text-light) 80%, transparent)",
          "skip-if-empty": true,
          "tooltip": "The default color of '.text--light-muted' text.",
          "documentation": "https://automaticcss.com/docs/background-text-assignments/"
        }
      ]
    },
