				{
					"id": "option-builder-input-validation",
					"title": "Variable Expansion & Validation",
					"tooltip": "Auto-expands variables and calc functions while validating and fixing broken values.",
					"type": "toggle",
					"default": "off",
					"style": "",
					"environment": {
						"exclude": "etch"
					}
				},
				{
					"id": "option-contextual-menus-enable",
					"title": "Contextual Menus",
					"tooltip": "Adds context menus for inserting classes and variables.",
					"type": "toggle",
					"default": "off",
					"style": "",
					"environment": {
						"exclude": "etch"
					}
				},
				{
					"id": "option-keyboard-nav-hover-preview-enable",
					"title": "Style Preview & Keyboard Enhancements",
