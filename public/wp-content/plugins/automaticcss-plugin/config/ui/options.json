					"default": "off",
					"style": "",
					"environment": {
						"exclude": "etch"
					}
				},
				{
					"id": "option-bem-class-generator-enable",
					"title": "Auto-BEM",
					"tooltip": "Allows you to generate BEM classes for a Block automatically in seconds.",
