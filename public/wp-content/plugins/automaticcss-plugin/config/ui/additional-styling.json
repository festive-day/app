	"content": [
		{
			"id": "focus-styling",
			"title": "Focus",
			"type": "accordion-container",
			"content": [
				{
					"id": "focus-message",
					"type": "message",
					"text": "Focus styles are critical for keyboard navigation and accessibility. Set your default focus styles here. You can also change focus styles on the fly with our library of <a target='_blank' href='https://automaticcss.com/docs/focus-classes/'>'.focus--' utility classes.</a>"
				},
				{
					"id": "focus-style",
					"title": "Focus Style",
					"type": "select",
					"default": "outline",
					"options": ["outline", "shadow"],
					"tooltip": "The default focus style for your website.",
					"documentation": "https://automaticcss.com/docs/global-focus-styling/"
				},
				{
					"id": "focus-color",
					"title": "Focus Color",
					"type": "text",
					"default": "var(--primary)",
					"target": "a",
					"tooltip": "The default focus color for focusable elements."
				},
				{
					"id": "focus-width",
					"title": "Focus Width",
					"type": "text",
					"default": "2px",
					"target": "a",
					"tooltip": "The thickness of the focus border."
				},
				{
					"id": "focus-offset",
					"title": "Focus Offset",
					"type": "text",
					"default": "2px",
					"target": "a",
					"tooltip": "The space between the focus border and the focused element.",
					"displayWhen": ["focus-style", "outline"]
				}
			]
		},
		{
			"id": "transition-styling",
			"title": "Transition",
			"type": "accordion-container",
			"content": [
				{
					"id": "transition-message",
					"type": "message",
					"text": "<a target='_blank' href='https://automaticcss.com/docs/transition/'>Transitions</a> are micro animations that can enhance the user experience by providing visual feedback when elements change state. Define your default transition styles here."
				},
				{
					"id": "option-transition-variables",
					"title": "Transition Variables",
					"type": "toggle",
					"default": "on",
					"style": "",
					"tooltip": "Variables for transitions."
				},
				{
					"id": "transition-timing",
					"title": "Timing Function",
					"type": "text",
					"default": "ease-in-out",
					"placeholder": "ease-in-out",
					"tooltip": "The default timing function for transitions.",
					"displayWhen": ["option-transition-variables", "on"]
				},
				{
					"id": "transition-duration",
					"title": "Duration",
					"type": "text",
					"default": ".3s",
					"placeholder": ".3s",
					"tooltip": "The default duration/length of transitions.",
					"displayWhen": ["option-transition-variables", "on"]
				},
				{
					"id": "transition-delay",
					"title": "Delay",
					"type": "text",
					"default": "0s",
					"placeholder": "0s",
					"tooltip": "The default delay before transitions begin.",
					"displayWhen": ["option-transition-variables", "on"]
				}
			]
		},
		{
			"id": "scroll-offsets",
			"title": "Scroll Offsets",
			"type": "accordion-container",
			"content": [
				{
					"id": "offsets-message",
					"type": "message",
					"text": "<a target='_blank' href='https://automaticcss.com/docs/scroll-offsets/'>Scroll Offsets</a> prevent elements from colliding with the device edge when scrolling to hash links. ACSS lets you set an offset for each breakpoint level for maximum flexibility."
				},
				{
					"id": "scroll-margin",
					"title": "Scroll Offset",
					"type": "px",
					"default": 0,
					"percentage-convert": true,
					"tooltip": "The amount of scroll offset on desktop devices.",
					"documentation": "https://automaticcss.com/docs/scroll-offsets/"
				},
				{
					"id": "scroll-margin-xxl",
					"title": "Scroll Offset (XXL)",
					"type": "px",
					"default": 0,
					"percentage-convert": true,
					"displayWhen": ["option-breakpoint-xxl", "on"],
					"tooltip": "The amount of scroll offset at the 'XXL' breakpoint.",
					"documentation": "https://automaticcss.com/docs/scroll-offsets/"
				},
				{
					"id": "scroll-margin-xl",
					"title": "Scroll Offset (XL)",
					"type": "px",
					"default": 0,
					"percentage-convert": true,
					"tooltip": "The amount of scroll offset at the 'XL' breakpoint.",
					"documentation": "https://automaticcss.com/docs/scroll-offsets/"
				},
				{
					"id": "scroll-margin-l",
					"title": "Scroll Offset (L)",
					"type": "px",
					"default": 0,
					"percentage-convert": true,
					"tooltip": "The amount of scroll offset at the 'L' breakpoint.",
					"documentation": "https://automaticcss.com/docs/scroll-offsets/"
				},
				{
					"id": "scroll-margin-m",
					"title": "Scroll Offset (M)",
					"type": "px",
					"default": 0,
					"percentage-convert": true,
					"tooltip": "The amount of scroll offset at the 'M' breakpoint.",
					"documentation": "https://automaticcss.com/docs/scroll-offsets/"
				},
				{
					"id": "scroll-margin-s",
					"title": "Scroll Offset (S)",
					"type": "px",
					"default": 0,
					"percentage-convert": true,
					"tooltip": "The amount of scroll offset at the 'S' breakpoint.",
					"documentation": "https://automaticcss.com/docs/scroll-offsets/"
				},
				{
					"id": "scroll-margin-xs",
					"title": "Scroll Offset (XS)",
					"type": "px",
					"default": 0,
					"percentage-convert": true,
					"displayWhen": ["option-breakpoint-xs", "on"],
					"tooltip": "The amount of scroll offset at the 'XS' breakpoint.",
					"documentation": "https://automaticcss.com/docs/scroll-offsets/"
				}
			]
		},
		{
			"id": "sticky-styling",
			"title": "Sticky Styling",
			"type": "accordion-container",
			"content": [
				{
					"id": "sticky-message",
					"type": "message",
					"text": "Set default offsets for sticky elements and choose whether sticky elements should automatically offset based on your site's header height (requires you to set header height values in Layout)."
				},
				{
					"id": "option-sticky-offset",
					"title": "Offset Sticky Automatically",
					"type": "toggle",
					"default": "on",
					"tooltip": "Automatically offset elements that use the .sticky class to prevent header collisions."
				},
				{
					"id": "sticky-offset-custom",
					"title": "Custom Sticky Offset",
					"type": "text",
					"default": "60px",
					"displayWhen": ["option-sticky-offset", "off"]
				}
			]
		},
		{
			"id": "box-shadow-styling",
			"title": "Box Shadows",
			"type": "accordion-container",
			"content": [
				{
					"id": "box-shadow",
					"title": "Box Shadows",
					"type": "tabs-container",
					"content": [
						{
							"id": "box-shadow-1",
							"type": "tab",
							"title": "Shadow 1",
							"dynamicTitle": "box-shadow-1-name",
							"content": [
								{
									"id": "box-shadow-1-name",
									"title": "Name",
									"type": "text",
									"default": "md",
									"validation": {
										"required": false
									}
								},
								{
									"id": "box-shadow-1-value",
									"title": "Value",
									"type": "textarea",
									"default": "0 0 40px color-mix(in srgb, black 10%, transparent)",
									"skip-if-empty": true,
									"cssVariable": "--box-shadow-md",
									"target": ".box-shadow--md",
									"validation": {
										"required": false
									}
								}
							]
						},
						{
							"id": "box-shadow-2",
							"title": "Shadow 2",
							"type": "tab",
							"dynamicTitle": "box-shadow-2-name",
							"content": [
								{
									"id": "box-shadow-2-name",
									"title": "Name",
									"type": "text",
									"default": "lg",
									"validation": {
										"required": false
									}
								},
								{
									"id": "box-shadow-2-value",
									"title": "Value",
									"type": "textarea",
									"default": "0 0 60px color-mix(in srgb, black 20%, transparent)",
									"skip-if-empty": true,
									"cssVariable": "--box-shadow--lg",
									"target": ".box-shadow--lg",
									"validation": {
										"required": false
									}
								}
							]
						},
						{
							"id": "box-shadow-3",
							"title": "Shadow 3",
							"type": "tab",
							"dynamicTitle": "box-shadow-3-name",
							"content": [
								{
									"id": "box-shadow-3-name",
									"title": "Name",
									"type": "text",
									"default": "xl",
									"validation": {
										"required": false
									}
								},
								{
									"id": "box-shadow-3-value",
									"title": "Value",
									"type": "textarea",
									"default": "0 0 80px color-mix(in srgb, black 30%, transparent)",
									"skip-if-empty": true,
									"cssVariable": "--box-shadow-xl",
									"target": ".box-shadow--xl",
									"validation": {
										"required": false
									}
								}
							]
						}
					]
				}
			]
		},
		{
			"id": "selection-styling",
			"title": "Selection Styling",
			"type": "accordion-container",
			"content": [
				{
					"id": "selection-message",
					"type": "message",
					"text": "Selection styling is the styling of text that is selected/highlighted by the user (like when you're going to copy text to your clipboard)."
				},
				{
					"id": "selection-bg",
					"title": "Background Color",
					"type": "text",
					"default": "",
					"skip-if-empty": true,
					"cssVariable": "--selection-bg-color",
					"validation": {
						"required": false
					},
					"tooltip": "The background color of user-selected text on your website.",
					"documentation": "https://automaticcss.com/docs/selection-styling/"
				},
				{
					"id": "selection-text",
					"title": "Text Color",
					"type": "text",
					"default": "",
					"skip-if-empty": true,
					"cssVariable": "--selection-text-color",
					"validation": {
						"required": false
					},
					"tooltip": "The text color of user-selected text on your website.",
					"documentation": "https://automaticcss.com/docs/selection-styling/"
				},
				{
					"id": "selection-bg-alt",
					"title": "Alt Background Color",
					"type": "text",
					"default": "",
					"skip-if-empty": true,
					"cssVariable": "--selection-bg-color-alt",
					"validation": {
						"required": false
					},
					"tooltip": "The alternate background color of user-selected text on your website.",
					"documentation": "https://automaticcss.com/docs/selection-styling/"
				},
				{
					"id": "selection-text-alt",
					"title": "Alt Text Color",
					"type": "text",
					"default": "",
					"skip-if-empty": true,
					"cssVariable": "--selection-text-color-alt",
					"validation": {
						"required": false
					},
					"tooltip": "The alternate text color of user-selected text on your website.",
					"documentation": "https://automaticcss.com/docs/selection-styling/"
				}
			]
		},
		{
			"id": "column-styling",
			"title": "Columns",
			"type": "accordion-container",
			"content": [
				{
					"id": "columns-tabs",
					"title": "Columns",
					"type": "tabs-container",
					"style": "inline",
					"content": [
						{
							"id": "column-width-tab",
							"type": "tab",
							"title": "Column Widths",
							"content": [
								{
									"id": "col-width-s",
									"title": "Small",
									"type": "text",
									"default": "13rem",
									"tooltip": "The width of small columns.",
									"documentation": "https://automaticcss.com/docs/css-columns/"
								},
								{
									"id": "col-width-m",
									"title": "Medium",
									"type": "text",
									"default": "25rem",
									"tooltip": "The width of medium columns.",
									"documentation": "https://automaticcss.com/docs/css-columns/"
								},
								{
									"id": "col-width-l",
									"title": "Large",
									"type": "text",
									"default": "38rem",
									"tooltip": "The width of large columns.",
									"documentation": "https://automaticcss.com/docs/css-columns/"
								}
							]
						},
						{
							"id": "column-rule-tab",
							"title": "Column Rules",
							"type": "tab",
							"content": [
								{
									"id": "col-rule-width-s",
									"title": "Small",
									"type": "text",
									"default": ".5px",
									"tooltip": "The width of the small column rule style.",
									"documentation": "https://automaticcss.com/docs/css-columns/"
								},
								{
									"id": "col-rule-width-m",
									"title": "Medium",
									"type": "text",
									"default": "1px",
									"tooltip": "The width of the medium column rule style.",
									"documentation": "https://automaticcss.com/docs/css-columns/"
								},
								{
									"id": "col-rule-width-l",
									"title": "Large",
									"type": "text",
									"default": "3px",
									"tooltip": "The width of the large column rule style.",
									"documentation": "https://automaticcss.com/docs/css-columns/"
								}
							]
						}
					]
				}
			]
		},
		{
			"id": "gradient-fades",
			"title": "Gradient Fades",
			"type": "accordion-container",
			"content": [
				{
					"id": "fades-message",
					"type": "message",
					"text": "<a target='_blank' href='https://automaticcss.com/docs/gradient-fades/'>Fade Classes</a> create a nice 'fade out' effect that is automatically compatible with any background color, surface, or element."
				},
				{
					"id": "option-gradient-fades-clone",
					"type": "clone",
					"target": "option-gradient-fades"
				},
				{
					"id": "gradient-fade-amount",
					"title": "Default Fade Amount",
					"type": "text",
					"default": "25%",
					"tooltip": "The default fade amount for gradient fades.",
					"displayWhen": ["option-gradient-fades", "on"]
				}
			]
		}
	]
}
